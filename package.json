{
  "name": "one-wallpaper",
  "private": true,
  "version": "1.1.0",
  "main": "electron/Main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "electron .",
    "electron:serve": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && electron-builder",
    "cz": "git add . && cz"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "electron-edge-js": "^19.0.0",
    "electron-store": "^8.1.0",
    "element-plus": "^2.2.17",
    "install": "^0.13.0",
    "npm": "^8.19.2",
    "pinia": "^2.0.22",
    "vue": "^3.4",
    "vue-router": "^4.1.6",
    "wallpaper": "^4.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "concurrently": "^7.4.0",
    "consola": "^3.2.3",
    "cross-env": "^7.0.3",
    "cz-customizable": "^7.0.0",
    "electron": "^19.0.0",
    "electron-builder": "^23.3.3",
    "hotkeys-js": "^3.10.1",
    "sass": "^1.55.0",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^3.1.0",
    "vite-plugin-style-import": "^2.0.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "one-wallhaven",
    "copyright": "Copyright Â© 2021 kuari",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./electron/icon/logo256x256.ico"
    },
    "win": {
      "icon": "./electron/icon/logo256x256.ico"
    },
    "linux": {
        "icon": "./electron/icon/logo256x256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./electron/icon/logo256x256.ico",
      "uninstallerIcon": "./electron/icon/logo256x256.ico",
      "installerHeaderIcon": "./electron/icon/logo256x256.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "env": {
    "node": true
  }
}
